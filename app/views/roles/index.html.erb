<% content_for :title, "Roleの管理" %>

<table class="w-full">
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td class="px-6 py-2">
          <%= role.name %>
        </td>
        <td class="px-6 py-2 text-right">
          <%= role.usable %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="mt-4 px-4">
  <%= link_to("DiscordのRoleと同期する", roles_sync_path, data: { turbo_method: :post }, class: "inline-block w-full text-center p-2 bg-blue-500 text-white rounded hover:bg-blue-700") %>
</p>
